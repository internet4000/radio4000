<div class="Playback">
	<div class="Playback-title" title="Current track / go to current radio">
		{{#link-to 'channel' model.channel}}
			{{player.model.title}} <span class="Playback-channel">({{player.model.channel.title}})</span>
		{{/link-to}}
	</div>

	<div class="Playback-buttons">

		<label class="Playback-shuffle Btn Btn--text {{if player.isShuffled 'is-active'}}" for="isShuffled" title="Toggle shuffle playback">
			{{x-icon i='shuffle'}}
		</label>
		{{input type="checkbox" id="isShuffled" checked=player.isShuffled class="is-hidden"}}

		<button class="Btn Btn--text" {{action 'prev' model}} title="Previous track">
			{{x-icon i='previous'}}
		</button>

		{{#if player.isPlaying}}
			<button class="Btn Btn--text" {{action 'togglePlay' target="emberYoutube"}} title="Pause track">
				{{x-icon i='pause'}}
			</button>
		{{else}}
			<button class="Btn Btn--text" {{action 'togglePlay' target="emberYoutube"}} title="Play track">
				{{x-icon i='play'}}
			</button>
		{{/if}}

		<button class="Btn Btn--text" {{action 'next' model}} title="Next track">
			{{x-icon i='next'}}
		</button>
	</div>

	<button class="Playback-videoBtn Btn Btn--text" {{action 'toggleFullscreen'}} title="Toggle fullscreen video">
		{{#if isFullscreen}}
			{{x-icon i='arrows-compress'}}
		{{else}}
			{{x-icon i='arrows-expand'}}
		{{/if}}
	</button>
</div>

{{yield}}
