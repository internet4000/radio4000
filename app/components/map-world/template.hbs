{{#leaflet-map
		 maxBounds=maxBounds
		 lat=lat
		 lng=lng
		 zoom=zoom
		 minZoom=minZoom
		 onMoveend=(action "updateCenter")
}}

	{{tile-layer url="https://{s}.tile.opentopomap.org/{z}/{x}/{y}.png"}}

	{{#each items as |item|}}
		{{#marker-layer location=item.coordinates}}
			{{#popup-layer}}
				{{yield item}}
			{{/popup-layer}}
		{{/marker-layer}}
	{{/each}}

{{/leaflet-map}}
