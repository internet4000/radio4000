<div class="Container Container--full">
	<div class="Intro Intro--one">

		<div class="Annonce Annonce--long Annonce--fullHeight">
			<p class="Block Block--white">
				one radio<br> for<br> each one
			</p>
		</div>
		<div class="Annonce Annonce--center">
			<p class="Block Block--white Block--left">each one</p>
			<p class="Block Block--white Block--center">x</p>
			<p class="Block Block--white Block--long Block--right">thousands of persons</p>
		</div>
		<div class="Keyvisual">
			<div class="IntroTitle">Radio 4000</div>
		</div>
		<div class="Annonce Annonce--center">
			<p class="Block">
				an infinity of good tracks selected with love
			</p>
		</div>
	</div>

	<section class="Container Container--full Section Section--space">
		<div class="Grid Grid--center Grid--full">
			<div class="Grid-item">
				{{#link-to 'channels.new' class="Box" title="Register or sign in to create your channel"}}
					<h2 class="Title">Create a radio</h2>
					<p>→ register or sign in</p>
				{{/link-to}}
			</div>
			<div class="Grid-item">
				{{#link-to 'channels' class="Box" title="Discover music by channels"}}
					<h2 class="Title">Discover radios</h2>
					<p>→ listen now</p>
				{{/link-to}}
			</div>
		</div>
	</section>

</div>
