<a class="Track-date" {{bind-attr href=track.url}}>{{track.createdDate}}</a>
{{#link-to 'track' track class="Track-link"}}
	<p class="Track-name">
		{{#if track.title}}
			{{track.title}}
		{{else}}
			Untitled
		{{/if}}
	</p>
	{{#if track.body}}
	<p class="Track-description">{{track.body}}</p>
	{{/if}}
{{/link-to}}

{{#if playlist.canEdit}}
	{{#if isEditing}}
		<form class="Form EditTrack">
			<label>URL
				{{input type="url" placeholder="YouTube or Soundcloud URL" value=track.url}}</label>
			<label>Title
			{{input value=track.title placeholder="Title"}}</label>
			<label>Description
			{{textarea value=track.body placeholder="Description"}}</label>
			<button class="Btn Btn--primary" {{action "save" track}}>Save track</button>
			<button class="Btn Btn--text Btn--danger" {{action 'remove' track}}>Delete</button>
			<button class="Btn Btn--text" {{action 'cancel'}}>Cancel</button>

			<div class="Track-controls">
				<button class="Btn Btn--text" {{action 'cancel'}}>Cancel</button>
			</div>
		</form>
	{{else}}
		<div class="Track-controls">
			<button class="Btn Btn--small" {{action 'edit'}}>Edit</button>
		</div>
	{{/if}}
{{/if}}

{{yield}}
