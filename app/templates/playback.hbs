<div {{bind-attr class=':Playback model:is-active'}}>
	<div class="Inner">

		<div {{bind-attr class=':Player isMaximized model.provider'}}>
			{{#if model}}
				<iframe id="player" type="text/html" width="210" height="166" frameborder="0" {{bind-attr src="embedUrl"}}></iframe>
				{{!-- <iframe id="SoundcloudPlayer" width="100%" height="166" frameborder="0"
					{{bind-attr src="model.url"}}></iframe> --}}
			{{/if}}
		</div>

		<div class="Controls">
			{{#if model}}

				<div class="Controls-title">
					{{#if model.title}}
						{{model.title}}
					{{else}}
						Untitled
					{{/if}}
				</div>

				<div class="Controls-buttons">
					{{#link-to 'playlist' controllers.playlist}}
						<button class="PlayerBtn PlayerBtn--playlist" title="Show current playlist">&#9835;</button>
					{{/link-to}}

					<button class="PlayerBtn PlayerBtn--toggle" {{action 'toggle'}} title="Toggle the video">&#127916;</button>

					{{#if isPlaying}}
						<button class="PlayerBtn PlayerBtn--pause" {{action 'pause'}}>ll</button>
					{{else}}
						<button class="PlayerBtn PlayerBtn--play" {{action 'play'}}>►</button>
					{{/if}}
				</div>

			{{else}}
				<button class="PlayerBtn PlayerBtn-play PlayerBtn-play--inactive" {{action 'play'}}>►</button>
			{{/if}}
		</div>
	</div>
</div>
