<div class="Manchet Manchet--left">
	<h1>Edit your channel</h1>
</div>

<div class="Container Container--full">
	<form class="Form Form--box" {{action "trySave" on="submit"}}>

		<div class="Channel-media">
			<div class="Channel-cover">
				<div class="Form-group">
					<label for="image">Channel image</label>
					{{file-upload image=newImage}}
					{{channel-cover model=model hideTitle=true}}
					{{!-- {{#if model.coverImage}}
						<button class="Btn Btn--text Btn--small u-alignRight" {{action 'deleteImage'}}>remove image</button>
					{{/if}} --}}
				</div>
			</div>
		</div>

		<div class="Channel-body">
			<div class="Form-group">
				<label for="title" >Channel title</label>
				{{focus-input id="title" value=model.title placeholder="Title" autofocus='autofocus' required="required" maxlength=titleMaxLength}}
			</div>

			<div class="Form-group">
				<label for="body" >Channel description</label>
				{{textarea id="body" value=model.body maxlength=channelDescriptionMaxLength placeholder="What is your channel about?"}}
			</div>

			<div class="Form-group">
				<label for="link">Link</label>
				{{input id="link" value=model.link placeholder="need a Link somewhere?" }}
			</div>

			<div class="Form-group Form--playlistSlug">
				<label for="slug">Permalink</label>
				<span class="Permalink">radio4000.com/c/</span>
				{{input id="slug" value=model.slug placeholder="channel-slug" required="required"}}
			</div>
		</div>

		{{!-- {{#if isAdmin}}
			<div class="Form-group">
				<label for="image">Featured
					{{input type="checkbox" checked=model.isFeatured}}
				</label>
			</div>
		{{/if}} --}}

		<div class="Form-group Form--save">
			<button class="Btn Btn--primary" type="submit">Save channel</button>
			{{#link-to 'channel.index' model class="Btn Btn--text Muted"}}Cancel edit channel{{/link-to}}
		</div>
	</form>

	{{#link-to 'channel.delete-channel' model class="Btn Btn--text Muted"}}Delete channel{{/link-to}}

</div>
