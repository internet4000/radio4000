<nav {{action "closePanel"}}>

	<div class="NavGroup">
		<div class="UserChannel">
			{{#if session.userChannel}}
				{{#link-to 'channel' session.userChannel title="Go to my channel"}}

					<figure class="UserChannel-media" {{bind-attr style=session.userChannel.coverImage.background}}></figure>
					<div class="UserChannel-body">
						<p class="UserChannel-intro Muted">Your radio channel</p>
						<p class="UserChannel-title">{{session.userChannel.title}}</p>
					</div>
				{{/link-to}}
			{{else}}
				{{#link-to "new" class="" title="Create your channel"}}
					<div class="UserChannel-body BoxIcon BoxIcon--add">
						<p class="UserChannel-title">Create your channel</p>
					</div>
				{{/link-to}}
			{{/if}}
		</div>
	</div>

	<div class="NavGroup">
		{{#if session.authed}}
			{{#link-to 'application' title="Discover channels"}}Dashboard{{/link-to}}
		{{/if}}
		{{#link-to 'channels' title="Discover channels"}}Discover{{/link-to}}
		{{#if session.authed}}
			{{#if session.userChannel}}
				{{!-- {{#link-to 'channel' session.userChannel title="Go to my channel"}}My channel{{/link-to}} --}}
			{{else}}
				{{!-- {{#link-to 'new' title="Create your channel"}}My channel{{/link-to}} --}}
			{{/if}}
		{{else}}
			{{#link-to 'new' title="Create your channel"}}+ Create my channel{{/link-to}}
		{{/if}}

	</div>

	<div class="NavGroup">
		{{#link-to 'about' title="Learn more about Radio4000"}}About{{/link-to}}
		{{#link-to 'help' title="Answers to your questions"}}Help / FAQ{{/link-to}}
	</div>

	<div class="NavGroup">
		{{#if session.authed}}
			<a href="#" class="Muted" title="Sign out from Radio 4000" {{action 'logout' this}}>Sign out</a>
		{{else}}
			{{#link-to 'signin' title="Sign in to Radio 4000"}}Sign in / Register{{/link-to}}
		{{/if}}
	</div>

</nav>
