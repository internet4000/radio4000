<div class="Player {{if model '' 'is-hidden'}} {{if isMaximized 'is-maximized'}}">
	{{ember-youtube ytid=model.ytid name=player
		playing="ytPlaying"
		paused="ytPaused"
		ended="ytEnded"
		error="ytError"
		showProgress="true"}}
</div>

<div class="Playback Bar Bar--bottom {{if model '' 'is-hidden'}}">
	<div class="Playback-title" title="Current track / go to current radio">
		{{#link-to 'channel' model.channel}}
			{{model.title}} <span class="Playback-channel">({{channel.title}})</span>
		{{/link-to}}
	</div>

	<div class="Playback-buttons">
		<label class="Playback-shuffle Btn Btn--text {{if isShuffled 'is-active'}}" for="isShuffled" title="Toggle shuffle playback">
			{{x-icon i='shuffle'}}
		</label>
		{{input type="checkbox" id="isShuffled" checked=isShuffled class="is-hidden"}}
		<button class="Btn Btn--text" {{action 'prev' model}} title="Previous track">
			{{x-icon i='previous'}}
		</button>
		{{#if player.isPlaying}}
			<button class="Btn Btn--text" {{action 'togglePlay' target="player"}} title="Pause track">
				{{x-icon i='pause'}}
			</button>
		{{else}}
			<button class="Btn Btn--text" {{action 'togglePlay' target="player"}} title="Play track">
				{{x-icon i='play'}}
			</button>
		{{/if}}
		<button class="Btn Btn--text" {{action 'next' model}} title="Next track">
			{{x-icon i='next'}}
		</button>
	</div>

	<button class="Playback-videoBtn Btn Btn--text" {{action 'toggle'}} title="Toggle fullscreen video">
		{{#if isMaximized}}
			{{x-icon i='arrows-compress'}}
		{{else}}
			{{x-icon i='arrows-expand'}}
		{{/if}}
	</button>
</div>
