<div class="Sections">
	<section class="Section">
		<div class="Manchet">
			<h1>Discover<small> â€” editor's selection</small></h1>
		</div>

		{{#unless model.featured}}
			<div class="Container">
				{{is-loading}}
			</div>
		{{else}}
			<div class="Container Container--full">
				<div class="Grid">
					{{#each model.featured as |item|}}
						<div class="Grid-item">
							{{channel-card channel=item}}
						</div>
					{{/each}}
				</div>
				<div class="Grid">
					<div class="Grid-item Grid-item--double">
						<h3>Tip</h3>
						<div class="Muted">
							<p>Each selected channel has been curated by human ears and handpicked for its unquestionable quality. Listen to music you'll love, it's free!</p>
						</div>
						<p>&rarr; {{link-to 'See all channels' 'channels.all'}}</p>

						<div class="Muted">
							{{#unless model.userChannel}}
								{{#link-to 'channels.new' class="" title="Create your own radio now or log in"}}Create your own radio{{/link-to}}<br><br>
							{{/unless}}
							{{#unless session.isAuthenticated}}
								{{#link-to 'login' class="" title="Create your own radio now or log in"}}Sign in or register{{/link-to}}
							{{/unless}}
						</div>
					</div>
				</div>
			</div>
		{{/unless}}
	</section>

	{{#if model.userChannel.favoriteChannels}}
		<section class="Section">
			<div class="Manchet">
				<h2><small>Your</small> favorite <small>radios</small></h2>
			</div>

			<div class="Container Container--full">
				<div class="Grid">
						{{#each model.userChannel.favoriteChannels as |item|}}
							<div class="Grid-item">
								{{channel-card channel=item}}
							</div>
						{{/each}}
				</div>
			</div>
		</section>
	{{/if}}
</div>
