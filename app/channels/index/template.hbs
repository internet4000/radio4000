<div class="Manchet">
	<h1>Discover<small> the editor's selection</small></h1>
</div>

<section class="Section Container">
		{{aside-channels	userChannel=session.currentUser.channels.firstObject}}
</section>

<section class="Section">
	{{#unless model.featured}}
		<div class="Container">
			{{is-loading}}
		</div>
	{{else}}
		<div class="Container Container--full">
			<div class="Grid">
				<div class="Grid-cell">
					<div class="Muted">
					  <p>Hello and welcome!</p>
					  <p>You can start your journey by listening to one of the radio on this page.</p>
					  <p>Otherwise, let's explore!</p>
					  <p>
					    &rarr; <a href="{{href-to 'intro'}}" title="">What is Radio4000?</a><br/>
					    &rarr; <a href="{{href-to 'channels.all'}}">See all radios</a>
					  </p>

					</div>

				</div>
				{{#each sortedFeaturedChannels as |channel|}}
				  <div class="Grid-cell">
				    {{channel-card channel=channel}}
				  </div>
				{{/each}}
			</div>
		</div>
	{{/unless}}
</section>

{{#if model.userChannel.favoriteChannels}}
	<section class="Section">
		<div class="Manchet">
			<h2><small>Your</small> favorite <small>radios</small></h2>
		</div>

		<div class="Container Container--full">
			<div class="Grid Grid--wide">
				{{#each model.userChannel.favoriteChannels as |userFavorite|}}
					<div class="Grid-cell">
						{{channel-card channel=userFavorite wide=true}}
					</div>
				{{/each}}
			</div>
		</div>
	</section>
{{/if}}
