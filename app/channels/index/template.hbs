<section class="Section">
	{{#unless model.featured}}
		<div class="Container">
			{{#is-loading}}
				Loading featured channelsâ€¦
			{{/is-loading}}
		</div>
	{{else}}
		<div class="Container Container--full">
			{{#list-manipulation list=model.featured as |manipulatedList|}}
				<div class="Grid">
					<div class="Grid-cell">
						<p>Hello and welcome!</p>
						<p>You can start your journey by listening to one of the radios on this page.</p>
						<p>Otherwise, let's explore!</p>
						<p>
							&rarr; <a href="{{href-to 'channels.all'}}">See all radios</a><br>
							&rarr; <a href="{{href-to 'about.intro'}}">What is Radio4000?</a>
						</p>
						<p>
							{{play-random-channel}}
						</p>
					</div>
					{{#each manipulatedList as |channel|}}
						<div class="Grid-cell">
							{{channel-card channel=channel}}
						</div>
					{{/each}}
				</div>
			{{/list-manipulation}}
		</div>
	{{/unless}}
</section>
