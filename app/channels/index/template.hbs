<section class="Section">
	{{#unless model}}
		<div class="Container">
			{{#is-loading}}
				Loading featured radio channelsâ€¦
			{{/is-loading}}
		</div>
	{{else}}
		<div class="Container Container--full">

			<div class="Grid">
				<div class="Grid-cell">
					<p>Welcome! Start your journey by listening to one of the radio channels here.</p>
					<p class="BtnGroup BtnGroup--vertical">
						{{play-random-channel class="Btn--full"}}
					</p>
				</div>

				{{#each model as |channel|}}
					<div class="Grid-cell">
						{{channel-card channel=channel}}
					</div>
				{{/each}}
			</div>

		</div>
	{{/unless}}
</section>
