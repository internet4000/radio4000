<div class="Sections">
	<section class="Section">
		<header class="Manchet">
			<h1>Settings</h1>
			<p>Customize Radio4000 to your needs.</p>
			<p>Here you can add and remove accounts which you can use to sign in.</p>
		</header>
		<div class="Container">

			{{#if currentUser.email}}
				<div class="ProviderAccount">
					<div class="ProviderAccount-body">
						<h3>Your Email</h3>
						<div class="Form-group">
							{{input placeholder=currentUser.email value=newEmail}}
						</div>
						<p class="ProviderAccount-id">
							{{#if currentUser.emailVerified}}
								(email verified)
							{{else}}
								<a href="#" {{action "verifyEmail"}} title="Click to send a new verification email">Please verify</a>
							{{/if}}
						</p>
					</div>
					<button class="Btn" {{action 'updateEmail' newEmail}}>Update</button>
				</div>
			{{/if}}

			<h3>Linked accounts</h3>

			{{account-provider-list
				providerData=providerData
				emailVerified=emailVerified
				unlink=(action "unlinkAccount")
				resetPassword=(action "resetPassword")
				verifyEmail=(action "verifyEmail")}}

			<h3>Unlinked accounts</h3>

			{{#if hasEverything}}
				<p class="Muted">There are no other accounts to connect.</p>
			{{/if}}
			<div class="ProviderAccounts">
				{{#unless hasGoogle}}
					{{account-provider-link
						name="Google"
						providerId="google.com"
						disabled=hasGoogle
						link=(action "linkAccount")}}
				{{/unless}}
				{{#unless hasFacebook}}
					{{account-provider-link
						name="Facebook"
						providerId="facebook.com"
						disabled=hasFacebook
						link=(action "linkAccount")}}
				{{/unless}}
				{{#unless hasEmail}}
					{{account-email-link name="Email" link=(action "linkEmail")}}
				{{/unless}}
			</div>
		</div>
	</section>
</div>
{{outlet}}
