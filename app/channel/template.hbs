<article class="Channel Channel--detail">
	<div class="Channel-header">
		<div class="Container Container--full">

			<div class="Channel-media">
				<div class="Channel-cover">
					{{channel-cover model=model playback=playback hideControls=false hideTitle=true play="play"}}
				</div>
			</div>

			<div class="Channel-body">

				<div class="Channel-titleSection">
					{{#unless canEdit}}
						<span class="Follow Follow--title">
							{{btn-favorite action="toggleFavorite" isFavorite=isFavorite}}
						</span>
					{{/unless}}

					<h1 class="Channel-title">
						{{#link-to 'channel' model}}{{model.title}}{{/link-to}}
					</h1>

					<p class="Muted LastUpdate">(updated {{lastUpdatedFormatted}})</p>
				</div>

				{{#if model.body}}
					<p class="Channel-description">{{model.body}}</p>
				{{/if}}

				{{#if model.link}}
					<p class="Channel-links">
						<a href="{{model.link}}" target="_blank">{{model.link}}</a>
					</p>
				{{/if}}

				{{#if canEdit}}
					<div class="BtnGroupWrapper">
						<div class="BtnGroup">
							{{#link-to 'channel.edit' model class="Btn" title="Edit your radio"}}
								{{x-icon i="pencil"}} Edit radio
							{{/link-to}}
						</div>
					</div>
				{{/if}}
			</div>
		</div>
	</div>

	<nav class="NavigationTab">
		{{#link-to 'channel.index' class="NavigationTab-item" title="All tracks"}}
			Tracks
		{{/link-to}}
		{{#link-to 'channel.favorites' class="NavigationTab-item" title="Favorites of this radio"}}
			Favorites
		{{/link-to}}
		{{#link-to 'channel.followers' class="NavigationTab-item" title="Followers of this radio"}}
			Followers
		{{/link-to}}
	</nav>

	<div class="Channel-outlet">
		{{outlet}}
	</div>
</article>
