<section class="Section">
	<div class="Container Container--full">
		<div class=" Grid">
			<div class="Grid-cell Grid-cell--triple">
				{{#if model.isLoaded}}
					{{#tracks-list
						items=model
						grouped=true
						numbered=false as |item|}}
						{{track-item track=item}}
					{{/tracks-list}}

					{{#unless model.length}}
						{{#if model.canEdit}}
							<p>
								Your radio has no tracks yet.<br>
								Try to {{link-to 'add your first' 'add'}}.
							</p>
						{{else}}
							<p>This radio has no tracks yet.</p>
						{{/if}}
					{{/unless}}
				{{else}}
					{{#is-loading}}
						Loading all tracksâ€¦
					{{/is-loading}}
				{{/if}}
			</div>
		</div>

		{{outlet}}
	</div>
</section>
