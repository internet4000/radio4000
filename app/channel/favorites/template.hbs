<div class="Channel-outlet">
	{{#if model.favoriteChannels}}

		{{#list-manipulation list=model.favoriteChannels as |manipulatedList updateSorting|}}
			<div class="Filters">
				{{#btn-group class='Filter Container'}}
					<span class="BtnGroup-label">Filter ({{model.favoriteChannels.length}}) by</span>
					{{btn-list-manipulation text='Recently updated'
							onClick=(action updateSorting 'updated')}}
					{{btn-list-manipulation text="Creation date"
							onClick=(action updateSorting "created" true)}}
					{{btn-list-manipulation text="A-Z"
							onClick=(action updateSorting "title" true)}}
				{{/btn-group}}
			</div>

			{{channels-list channels=manipulatedList}}
		{{/list-manipulation}}

	{{else}}
		<div class="Container u-push-3">
			<p>This channel doesn't have any favorites, yet.</p>
		</div>
	{{/if}}
</div>
