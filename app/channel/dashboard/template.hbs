{{#if model.tracks.length}}

	<div class="Widgets-separator">
		<div class="Widget">
			{{playback/play-first track=model.tracks.firstObject}}
			<span>Play this radio from</span><span class="Tplay-options"> {{#link-to 'track' model.tracks.firstObject}}the beginning{{/link-to}} {{#link-to 'track' model.tracks.lastObject}}the end{{/link-to}} <a {{action "playShuffle" target="player"}}>a random point in time</a></span>
		</div>
	</div>

	<div class="Section">
		<div class="Widgets Widgets--tracks">
			{{channel/widgets/x-tracks tracks=model.tracks title="Newest"}}

			{{channel/widgets/x-tracks tracks=model.tracks reverse=true title="Oldest"}}
		</div>
	</div>
{{else}}
	<div class="Container Section Section--messaging">
		<p>This radio is empty, no data to analyse!</p>
	</div>
{{/if}}

{{outlet}}
