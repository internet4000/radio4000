<section class="Section Section--flex Section--flexCenter">
	<div class="Container">
		{{channel-header channel=model.channel}}
	</div>
</section>

<section class="Section">
	{{#if model.channel.totalTracks}}
		<div class="Container">
			<h3>
				Latest tracks
				<small>({{link-to "see all" "channel.tracks"}})</small>
			</h3>
		</div>
		<div class="Container Container--noPaddingMobile">
			{{#if model.latestTracks}}
				{{#tracks-list items=model.latestTracks as |item|}}
					{{track-item track=item}}
				{{/tracks-list}}
			{{else}}
				{{#is-loading}}
					Loading latest tracks
				{{/is-loading}}
			{{/if}}
		</div>
		<div class="Container">
			<p class="u-textRight">
				{{link-to "See all tracks" "channel.tracks"}}
			</p>
		</div>
	{{/if}}
</section>

<section class="Section">
	<div class="Container">
		{{#if showWelcome}}
			<details class="Details">
				<summary>
					Getting started?
				</summary>
				<aside class="Details-body">
					{{page-welcome channel=model.channel}}
				</aside>
			</details>
		{{/if}}

		<details class="Details">
			<summary>
				Embed and share {{if model.channel.canEdit "your" "this"}} radio
			</summary>
			<aside class="Details-body">
				<div class="u-push-1">
					{{#channel-sharer-url
							 slug=model.channel.slug
							 autoSelect=true
					}}
						Radio homepage
						{{#if model.channel.canEdit}}
							<small>{{link-to 'edit' 'channel.edit'}}</small>
						{{/if}}
					{{/channel-sharer-url}}
				</div>
				<div class="u-push-1" title="Tip: paste this <iframe> element in the HTML code of any website to embed a player of this radio">
					{{#channel-sharer-url
							 slug=model.channel.slug
							 showEmbed=true
							 autoSelect=true
					}}
						Embed
					{{/channel-sharer-url}}
				</div>
				<div title="Tip: paste this HTNML link element in the HTML code of any website to embed an icon linking to this radio">
					{{#channel-sharer-url
							 slug=model.channel.slug
							 showIcon=true
							 autoSelect=true
					}}
						Icon
					{{/channel-sharer-url}}
				</div>
			</aside>
		</details>
	</div>
</section>

{{outlet}}
